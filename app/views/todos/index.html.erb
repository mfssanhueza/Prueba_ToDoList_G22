<div class="row">
  <% @todos.each do |todo| %>
  <div class="col-md-4">
    <div class="card <%= todo.completed ? 'border-success' : 'border-danger' %>">
      <div class="card-header">
        <%= todo.completed ? "Tarea realizada" : "Tarea pendiente" %>
      </div>
      <div class="card-body ">
        <h5 class="card-title"><%= todo.description %></h5>
        <%= link_to 'Show', todo_path(todo), class:'btn btn-warning btn-sm' %>
        <%= link_to 'Edit', todos_edit_path(todo), class:'btn btn-info btn-sm' %>
        <% if todo.completed == false %>
          <%= link_to 'Do', todos_complete_path(todo), method: :post, class:'btn btn-success btn-sm' %>
        <% else %>
          <%= link_to 'Undo', todos_undo_path(todo), method: :post, class:'btn btn-primary btn-sm' %>
        <% end %>
        <%= link_to 'Delete', todos_destroy_path(todo), method: :delete, data: { confirm: '¿Estás seguro?' }, class:'btn btn-danger btn-sm' %>
      </div>
    </div>
    <br>
  </div>
  <% end %>
</div>
<br>
<%= link_to 'Nueva tarea', todos_new_path, class: 'btn btn-info' %>
