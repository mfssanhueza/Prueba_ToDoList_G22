<div class="col-md-4">
  <%= form_with(model: @todo, local: true) do |form| %>
  <div class="form-group">
    <%= form.label 'Tarea:'%>
    <%= form.text_field :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.check_box :completed %>
    <%= form.label 'Tarea realizada' %>
  </div>

  <%= form.submit 'Enviar', class: 'btn btn-success' %>
  <% end %>
</div>
